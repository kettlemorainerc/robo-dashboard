{
	"compilerOptions": {
		"target": "ES2015",
		"module": "AMD",
		"moduleResolution": "Node",
		"jsx": "react",
		"baseUrl": "./",
		"rootDir": "./src",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": false,
		"allowJs": true,
		"lib": ["DOM", "DOM.Iterable", "ES2015", "ES2016", "ES2017"],
		"noImplicitAny": false,
		"isolatedModules": true
	},
	"include": ["src"]
}